
	<div id="project_content" >

      <div class="panel panel-primary">

        <div class="panel-heading"><h3 class="panel-title">Create A Project</h3></div>
        <div class="panel-body project-panel">
          <%= form_for @project, html: {role: "form", multipart: true} do |f| %>

              <div class="form-group">
                <label for="title">Project Title</label>
                <%= f.text_field :title, placeholder: 'Your Project Title', class: "form-control" %>
              </div>

              <div class="form-group">
                <label for="video_duration">How, long do you want your video to be?</label>
                <div class="radio">


                  <%= f.radio_button :video_duration, '1.0', :checked => true, class: 'inline' %>
                  <%= label :video_duration, 'One Minute', class: 'inline' %>
                </div>
                <div class="radio">
                  <%= f.radio_button :video_duration, '2.0' %>
                  <%= label :video_duration, 'Two Minute' %>
                </div>

              </div>


              <div class="form-group">
                <label for="video_duration">Choose a gender for your voiceover</label>
                <div class="radio">


                  <%= f.radio_button :voice_over, 'male', :checked => true %>
                  <%= label :voice_over, 'Male' %>
                </div>
                <div class="radio">
                  <%= f.radio_button :voice_over, 'female' %>
                  <%= label :voice_over, 'Female' %>
                </div>

              </div>

              <div class="form-group">
                <label for="requirements">Explain your requirements</label>
                <%= f.text_area :requirements, rows: "8", class: "form-control",  placeholder: "Type your message here..." %>

              </div>

              <div class="form-group">
                <label for="document">Attachments</label>

                <div class="container attachments">
                  <%= f.fields_for :assets do |asset| %>

                      <div class="row file-row">
                       <div class="col-sm-4"><%= asset.file_field :document, class: "form-control" %></div> <div class="col-sm-6 img remove attach">
                        <a href="#"></a><i class="fa fa-minus-square fa-2x"></i></div>

                        </div>

                  <% end %>
                  <div class="attach col-sm-2"><i class="fa fa-plus-square fa-2x"></i><span></span><span class="attach-text"><strong>Attach More...</strong></span></div>

                </div>

              </div>

              <div class="form-group">

                <%= f.submit "Create", class: "btn btn-success shadow" %>

              </div>


          <% end %>
        </div>
      </div>

	</div>
    <script src="/assets/js/script.js"></script>


